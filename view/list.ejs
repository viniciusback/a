<%- include('./header.ejs') %>

    <br>
    <br>
    <br>
    <input type="hidden" data-id="<%= dataLoja.senha %>">
    <section id="list">
        <div class="inner">
            <div class="col-12" id="data" style="display: none;">
                <% if ( clientesCadastrados.length > 0 ) { %>
                <div class="responsive-table" >
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Nome</th>
                                <th scope="col">Celular</th>
                                <th scope="col">E-mail</th>
                                <th scope="col">Data de Nascimento</th>
                                <th scope="col">Endereço</th>
                                <th scope="col">CPF</th>
                            </tr>
                        </thead>
                        <tbody>                            
                            <% clientesCadastrados.forEach(function(cliente) { %>
                            <tr>
                                <td><%= cliente.nome %></td>
                                <td><%= cliente.celular %></td>
                                <td><%= cliente.email %></td>
                                <td><%= cliente.data_nascimento %></td>
                                <td><%= cliente.endereco %></td>
                                <td><%= cliente.cpf %></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <p>Não existem clientes registrados</p>
                <% } %>
            </div>
        </div>
    </section>
  
    <%- include('./footer.ejs') %>
    </body>

    <script>
        $(document).ready(function(){
            let id = $('input[type=hidden]').attr('data-id')
            function showData() {
                var password = prompt('Sua senha')
                if ( password == id) {
                $('#data').toggle()
                } else {
                    alert('Senha incorreta')
                    window.location.href = ('/')
                }
            }
            showData()
        })
    </script>
</html>
